@using Subs.Data 
@model IProductRepository

@{
    ViewBag.Title = "ProductCatalog";
    Layout = null;
    Html.EnableClientValidation(false);  // p619
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, shrink-to-fit=no">
   
    <link href="~/Content/StyleSheet.css" rel="stylesheet" type="text/css">

    <title>@ViewBag.Title</title>

    <style>
        
        .mySelect {
            font-family: Titillium, Arial, sans-serif;
            color:orangered;
        }

        .mySelect:hover input { 
            transform: scale(2);
        }
        
        .myImage {
                margin: 1em 1em 1em 1em;
                border: 2px solid grey;
            }

 
        .myFieldset {
            display: inline;
            border: 2px solid blue;
            max-width: 13em;
            margin: 1em 1em 1em 1em;
            padding: 1em 1em 1em 1em;
        }

    
        span {
            visibility: visible;
            font-family: Titillium, Arial, sans-serif;
            width: 500px;
            background-color: aqua;
            color: #000;
            text-align: left;
            border-radius: 6px;
            padding: 1em 1em 1em 1em;
            
        }

        .thumb {
            float: left; /* must be floated for same cross browser position of larger image */
            position: relative;
            margin: 3px;
        }

            .thumb img {
                border: 1px solid #000;
                vertical-align: bottom;
            }

            .thumb:hover {
                border: 0; /* IE6 needs this to show large image */
                z-index: 1;
            }

            .thumb span {
                position: fixed;
                visibility: hidden;
            }

            .thumb:hover span {
                visibility: visible;
                top: 4em;
                left: 20%;
                right: 20%;
                width:60%;
                -webkit-animation: fadeIn 2s;
                animation: fadeIn 2s
            }


        nav ul {
            margin: 0;
            padding: 0;
            list-style-type: none;
        }

        nav li {
            display: inline;
        }

        nav a, .myButton {
            display: inline;
            padding: 3px 7px 1px 7px;
            border-radius: 20px;
            border-color: darkblue;
            text-decoration: none;
            font-family: Titillium, Arial, sans-serif;
            font-weight: 700;
            color: white;
            text-shadow: 2px 2px 4px rgba(0,0,0,1);
            text-transform:none;
            font-size: 1.5em;
            letter-spacing: .1em;
            background-color: dodgerblue;
            margin: 20px 20px 20px 20px;
        }

       

            @@-webkit-keyframes fadeIn {
                from {
                    opacity: 0;
                }

                to {
                    opacity: 1;
                }
            }

            @@keyframes fadeIn {
                from {
                    opacity: 0;
                }

                to {
                    opacity: 1;
                }
            }

    

    </style>

</head>
<body>

    @*@Html.Partial("Heading")*@

    <p>@ViewBag.Message</p>

    @using (Html.BeginForm("List", "Promotion"))
    {
       
    <nav>
        <ul>
            @*<li>
                @Html.ActionLink("Compare human medicine offerings", "CompareMedicine", "Promotion")
            </li>*@

            <li>
                <input class="myButton" type="submit" value="Calculate a price" />
            </li>
        </ul>
    </nav>

        int i = 0;

        foreach (Product p in Model.Products)
        {

            <fieldset class="myFieldset">
                <p style="height:5em; width:190px;font-family:Arial;">@p.Heading</p>

                <a class="thumb" href="#">
                    <img class="myImage" src="data:image;base64, @System.Convert.ToBase64String(p.Picture)" width="150" height="200" alt="" />
                    <span style="font-family:Arial">
                        @Html.Raw(p.Description)
                    </span>
                </a>

                @Html.Hidden("[" + i + "].Heading", p.Heading)
                @Html.Hidden("[" + i + "].ProductId", p.ProductId)
                <p style="font-family:Arial">
                    <label class="mySelect">
                        @Html.CheckBox("[" + i + "].Checked", p.Checked) Select!
                    </label>

                    @if (p.CPDEnabled)
                    {
                        <label style="color:green; font-weight:700">CPD test</label>
                    }

                </p>
            </fieldset>
            i++;
        }
    }
</body>
</html>