@model Subs.MimsWeb.Models.LoginRequest
@{
    ViewBag.Title = "Register email";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, shrink-to-fit=no">

    <link href="~/Content/StyleSheet.css" rel="stylesheet" type="text/css">

    <title>@ViewBag.Title</title>

    <style>
        .myButton {
            margin: 2em 0em 0em 1.4em;
            display: block;
            padding: 3px 7px 1px 7px;
            border-radius: 10px;
            border-color: dodgerblue;
            text-decoration: none;
            font-family: Titillium, Arial, sans-serif;
            font-weight: 700;
            color: white;
            font-size: 0.8em;
            letter-spacing: .1em;
            background-color: dodgerblue;
        }

        input[type=text] {
            width: 30em;
            font-family: Arial;
        }   

    </style>



</head>
<body>

    @Html.Partial("Heading")



    <div>
        @using (Html.BeginForm())
        {
            <p style="margin:2em 0em 2em 1em; color:red;font-family:Arial;">
                @Html.ViewBag.Message
            </p>

            <p style="margin:2em 0em 2em 1em; font-family:Arial;">
                Please enter your email address: @Html.TextBoxFor(x => x.Email)
            </p>

            <input class="myButton" type="submit" value="Submit" />

        }
    </div>
    </body>
</html>
